<Window x:Class="Scheduler.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scheduler"
        xmlns:C =" http://www.hardcodet.net/taskbar"

        mc:Ignorable="d"
        Title="MainWindow" Height="471.625" Width="650" Closing="AppInTray">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.PopupBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBlock.xaml" />
                <!-- throw in some extra colour for our floating action button -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/MaterialDesignColor.Green.Named.Primary.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Window.Resources>

    <Grid Name="mainGrid" Background="#FFC1DBEA">

        <Grid>

            <ScrollViewer VerticalScrollBarVisibility="Hidden" Margin="75,90,75,20">
                <Grid Width="541">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="66*"/>
                        <ColumnDefinition Width="475*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel x:Name="listPanel" Margin="0" Background="#33C1DBEA" Grid.Column="1">

                    </StackPanel>
                </Grid>

            </ScrollViewer>


            <StackPanel x:Name="UpLine" Background="#FF7378EC" Margin="0,0,0,370">

                <Grid Height="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30*"/>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="30*"/>
                    </Grid.ColumnDefinitions>


                    <Label x:Name="projectName" Content="{DynamicResource projectName}" Grid.Column="1" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" FontFamily="Segoe UI Emoji" FontSize="16" Foreground="#DDFFFFFF" />
                    <Button x:Name="AddSetBut" Grid.Column="0" Content="{DynamicResource addSetBut}" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Center" FontFamily="Sitka Display" Foreground="White" BorderBrush="#FFE86363" Click="addSet_Click" FontWeight="Normal" Background="#FFE86363"/>
                    <Button x:Name="backBut" Content="{DynamicResource backBut}" Grid.Column="0" HorizontalAlignment="Center" Margin="5,5,5,5" VerticalAlignment="Center" FontFamily="Sitka Display" Foreground="White" BorderBrush="#FFE86363" Background="#FFE86363" Click="backClick"  Visibility="Hidden"/>
                    <materialDesign:PopupBox Grid.Column="2" Margin="103,4,0,9" Name="SettingBtn"
                  Style="{StaticResource MaterialDesignMultiFloatingActionPopupBox}"
                  PlacementMode="BottomAndAlignCentres"
                  ToolTipService.Placement="Right"
                  ToolTip="{StaticResource settingBtn}" Height="Auto" Width="47" Background="#FFE86363">
                        <materialDesign:PopupBox.ToggleContent >
                            <materialDesign:PackIcon Kind="SettingsOutline" Height="28" Width="28" />
                        </materialDesign:PopupBox.ToggleContent>
                        <StackPanel>
                            <Button Name="themeBtn" ToolTip="{StaticResource themeBtn}" Background="#FFE86363" Foreground="#DDFFFFFF" Click="themes_Click">
                                <materialDesign:PackIcon Kind="Theme" />
                            </Button>
                            <Button Name="languagesBtn" ToolTip="{StaticResource languagesBtn}" Background="#FFE86363" Foreground="#DDFFFFFF" Click="languages_click">
                                <materialDesign:PackIcon Kind="Language" />
                            </Button>
                        </StackPanel>
                    </materialDesign:PopupBox>
                </Grid>
            </StackPanel>

        </Grid>
        <Grid Name="AddSetGrid" Visibility="Hidden">
            <Frame x:Name="addFrame" Content="" HorizontalAlignment="Center" Height="297" Margin="186,83,186,0" VerticalAlignment="Top" Width="270" Background="#BFFFFFFF"/>
            <Label x:Name="themeIn" Content="{StaticResource themeIn}" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="218,94,0,0" VerticalAlignment="Top" Width="61" FontFamily="Sitka Display" FontSize="16" Height="33"/>
            <TextBox x:Name="temaBox" HorizontalAlignment="Left" Height="33" Margin="283,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="149" FontFamily="Comic Sans MS" FontSize="14"/>
            <Label x:Name="opisanieIn" Content="{StaticResource opisanieIn}" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="193,127,0,0" VerticalAlignment="Top" Width="89" FontFamily="Sitka Display" FontSize="16" RenderTransformOrigin="0.152,0.444"/>
            <xctk:RichTextBox Name ="textToEl" Margin="283,132,210,210">

            </xctk:RichTextBox>

            <DatePicker Name="dataEl" HorizontalAlignment="Center"
                  materialDesign:HintAssist.Hint="{StaticResource dataEl}"
                  Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Margin="260,231,263,163" />

            <materialDesign:TimePicker Name="timeEl" HorizontalAlignment="Center"
                  materialDesign:HintAssist.Hint="{StaticResource timeEl}"
                  Style="{StaticResource MaterialDesignFloatingHintTimePicker}"
                  Is24Hours="True"
                  Margin="258,299,259,0" Height="28" />

            <ToggleButton Name="Volume"
                  Style="{StaticResource MaterialDesignSwitchToggleButton}"
                  ToolTip="Default ToggleButton Style" Margin="357,329,220,67" />

            <Button Name="saveBut" Click="saveClick"
                Style="{StaticResource MaterialDesignRaisedAccentButton}"
                ToolTip="Resource name: MaterialDesignRaisedAccentButton"
                materialDesign:RippleAssist.Feedback="#DD000000" Margin="243,391,233,10" FontFamily="Sitka Display" Background="#FFE86363" BorderBrush="#FFE86363" Foreground="#DDFFFFFF" Height="Auto"
                Content="{StaticResource saveBut}">

            </Button>
            <Label x:Name="volumeOn" Content="{StaticResource volumeOn}" HorizontalAlignment="Left" Margin="218,336,0,0" VerticalAlignment="Top" Width="164" FontFamily="Sitka Display" FontSize="16" RenderTransformOrigin="0.152,0.444"/>


        </Grid>
        <Grid Name="themesGrid" Visibility="Hidden">

            <Grid Name="PicturesGrid" Margin="44,80,38,10" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="120*"/>
                    <RowDefinition Height="120*"/>
                    <RowDefinition Height="120*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120*"/>
                    <ColumnDefinition Width="120*"/>
                    <ColumnDefinition Width="120*"/>
                </Grid.ColumnDefinitions>

            </Grid>

        </Grid>
        <Grid Name="LangGrid" Visibility="Hidden">
            <ComboBox Name="menuLanguage" Margin="0,63,0,331" Background="#FF7378EC" Height="47" >

            </ComboBox>
        </Grid>

    </Grid>
</Window>
